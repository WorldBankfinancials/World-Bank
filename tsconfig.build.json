{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "client/**/*",
    "node_modules",
    "dist",
    "server/vite.ts",
    "vite.config.ts",
    "drizzle.config.ts"
  ]
}